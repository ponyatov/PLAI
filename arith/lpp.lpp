%{
#include "hpp.hpp"
%}
%option main noyywrap
S [\+\-]?
N [0-9]+
%%
#[^\n]*			{}						/* comment rule	*/

{S}{N}			 {cout<<Sym(yytext).dump()<<endl; }
{S}{N}\.{N}		 {cout<<Sym(yytext).dump()<<endl; }
{S}{N}[eE]{S}{N} {cout<<Sym(yytext).dump()<<endl; }

\+				{cout<<Sym("plus",yytext).dump()<<endl; }
\-				{cout<<Sym("minus",yytext).dump()<<endl; }
\*				{cout<<Sym("mult",yytext).dump()<<endl; }

[ \t\r\n]+		{}						/* drop spaces	*/
