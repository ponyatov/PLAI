]

README.md = [
	''+[ '#' MODULE ':' TITLE ]/' '
	''+[ '###' TITLE ]/' '
	''+[]
	''+[ '(c)' AUTHOR ',' LICENSE ]/' '
	''+[ 'github:' GITHUB ]/' '
]

.end

