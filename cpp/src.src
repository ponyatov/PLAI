meta.hpp = [
	''+['#define' ~MODULE	'"'+MODULE+'"'	]/' '
	''+['#define' ~TITLE	'"'+TITLE+'"'	]/' '
	''+['#define' ~ABOUT	'"'+ABOUT+'"'	]/' '
